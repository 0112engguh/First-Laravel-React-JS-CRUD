{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
  
      "allowJs": true,
      "noEmit": true,
  
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "esModuleInterop": true,
      "isolatedModules": true,
  
      "jsx": "react-jsx",
  
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"],
        "a/*": ["resources/js/*"]
      }
    },
    "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.d.ts"
    ]
  }